<br>
<input type="text" id="numero" placeholder="Digite o Ãºltimo nÃºmero">
<button onclick="adicionarNumero()">Adicionar</button>
<button onclick="analisar()">Analisar TendÃªncia</button>
<button onclick="copiarNumeros()">Copiar NÃºmeros</button>
<br>
<label><input type="checkbox" id="som" checked> Alerta Sonoro</label>

<div id="historico"></div>
<div id="resultado" class="resultado"></div>
<div id="alerta" class="alerta"></div>

<script>
let numeros = [];

function adicionarNumero() {
    let num = document.getElementById("numero").value;
    if (num !== "" && !isNaN(num)) {
        numeros.push(parseInt(num));
        document.getElementById("historico").innerHTML = "HistÃ³rico: " + numeros.join(", ");
        document.getElementById("numero").value = "";
    }
}

function analisar() {
    if (numeros.length < 5) {
        alert("Adicione pelo menos 5 nÃºmeros para anÃ¡lise.");
        return;
    }

    let contagem = {};
    for (let n of numeros) {
        contagem[n] = (contagem[n] || 0) + 1;
    }

    let ranking = Object.entries(contagem)
        .map(([num, freq]) => ({
            numero: num,
            chance: (freq / numeros.length * 100).toFixed(2)
        }))
        .sort((a, b) => b.chance - a.chance)
        .slice(0, 22);

    let html = "<h2>NÃºmeros ProvÃ¡veis</h2>";
    ranking.forEach(r => {
        html += `<div class='numero'>${r.numero} - ${r.chance}%</div>`;
    });

    document.getElementById("resultado").innerHTML = html;

    if (document.getElementById("som").checked) {
        let beep = new Audio("https://www.soundjay.com/button/beep-07.wav");
        beep.play();
    }
    document.getElementById("alerta").innerText = "ðŸš¨ Oportunidade de aposta detectada!";
}

function copiarNumeros() {
    let texto = document.getElementById("resultado").innerText;
    navigator.clipboard.writeText(texto).then(() => {
        alert("NÃºmeros copiados!");
    });
}
</script>

